<Window x:Class="Memory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Memory" Height="740" Width="660"
        WindowStartupLocation="CenterScreen"
        Background="#fdc1cb">

    <Grid>
        <!-- Zeilen: Header, CardGrid, Footer -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Obere Leiste -->
            <RowDefinition Height="*"/>
            <!-- Karten -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#ca9aa2" Padding="12" Grid.Row="0"
                BorderBrush="#33384D" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- Linke Buttons -->
                    <ColumnDefinition Width="*"/>
                    <!-- Abstand -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Rechte Seite: Zeit & Züge -->
                </Grid.ColumnDefinitions>

                <!-- Linke Buttons -->
                <StackPanel Orientation="Horizontal" Grid.Column="0" HorizontalAlignment="Left">
                    <Button x:Name="BtnNewGame"
                            Content="Neues Spiel"
                            Width="130" Height="36"
                            Margin="0,0,8,0"
                            Click="BtnNewGame_Click"
                            Background="#FFF7DDE1"
                            FontFamily="Perpetua Titling MT"
                            FontWeight="Bold"/>
                    <Button x:Name="BtnReset"
                            Content="Reset"
                            Width="90" Height="36"
                            Background="#FFF7DDE1"/>
                </StackPanel>

                <!-- Rechte Seite: Zeit & Züge -->
                <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="Zeit: " Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock x:Name="TxtTime"
                               Text="00:00"
                               Foreground="White"
                               FontWeight="Bold"
                               Margin="4,0,16,0"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="Züge: " Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock x:Name="TxtMoves"
                               Text="0"
                               Foreground="White"
                               FontWeight="Bold"
                               Margin="4,0,0,0"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="TxtPlayer"
                               Text="1"
                               Foreground="White"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="4,0,0,0"/>
                      
                    
                </StackPanel>
            </Grid>
        </Border>

        <!-- CardGrid -->
        <Grid x:Name="CardGrid" Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>

        
    </Grid>
</Window>
