<Window x:Class="Memory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Memory" Height="740" Width="660"
        WindowStartupLocation="CenterScreen"
        Background="#fc7d98">
    
    <Grid>
        <!-- Zeilen: Header, CardGrid, Footer -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Obere Leiste -->
            <RowDefinition Height="*"/>
            <!-- Karten -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <!-- Header -->
        <Border Background="Black" Padding="8" Grid.Row="0"
        BorderBrush="#33384D" BorderThickness="0,0,0,1">
            <Grid>
                <!-- 2 Zeilen: oben Spieler/Buttons/Zeit, unten Scores -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 3 Spalten: Buttons | Mitte | Zeit/Züge -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- Buttons -->
                    <ColumnDefinition/>
                    <!-- Mitte -->
                    <ColumnDefinition Width="138"/>
                    <!-- Zeit & Züge -->
                </Grid.ColumnDefinitions>

                <!-- Linke Buttons -->
                <StackPanel Grid.Row="0" Grid.Column="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
                    <Button x:Name="BtnNewGame"
                    Content="Neues Spiel"
                    Width="130" Height="36"
                    Margin="0,0,8,0"
                    Click="BtnNewGame_Click"
                    Background="DeepPink"
                    BorderBrush="#FFDF0B6A"
                    FontFamily="Agency FB"
                    FontWeight="Bold"
                    FontSize="18"/>
                </StackPanel>

                <!-- Spieleranzeige in der Mitte (groß, fett, farbig) -->
                <TextBlock x:Name="TxtPlayer" Grid.Column="1"
                   Text="Spieler 1"
                   FontFamily="Agency FB"
                   FontWeight="Bold"
                   FontSize="32"
                   Foreground="DeepPink"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top" Margin="0,-3,0,0"/>

                <!-- Punktezähler unter der Spieleranzeige -->
                
                <StackPanel Grid.Row="1" Grid.Column="1"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0,0,0,4">
                    <TextBlock x:Name="TxtScoreP1"
               Text="P1: 0"
               FontSize="14"
               FontWeight="Bold"
               Foreground="DeepPink"
               FontFamily="Agency FB"
               Margin="0,0,12,0"/>
                    <TextBlock x:Name="TxtScoreP2"
               Text="P2: 0"
               FontSize="14"
               FontWeight="Bold"
               Foreground="SkyBlue"
               FontFamily="Agency FB"/>
                </StackPanel>


                <!-- Rechte Seite: Zeit & Züge -->
                <StackPanel Grid.Row="0" Grid.Column="2"
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Margin="0,0,20,0">
                    <TextBlock Text="Zeit: "
                       Foreground="White"
                       VerticalAlignment="Center"
                       FontFamily="Agency FB"
                       FontWeight="Bold"
                       FontSize="16"/>
                    <TextBlock x:Name="TxtTime"
                       Text="00:00"
                       Foreground="White"
                       Margin="4,0,16,0"
                       VerticalAlignment="Center"
                       FontFamily="Agency FB"/>
                    <TextBlock Text="Züge: "
                       Foreground="White"
                       VerticalAlignment="Center"
                       FontFamily="Agency FB"
                       FontWeight="Bold"
                       FontSize="16"/>
                    <TextBlock x:Name="TxtMoves"
                       Text="0"
                       Foreground="White"
                       Margin="4,0,0,0"
                       VerticalAlignment="Center"
                       FontFamily="Agency FB"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- CardGrid -->
        <Grid x:Name="CardGrid" Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>
        <!-- WINNER OVERLAY -->
        <Grid x:Name="WinnerOverlay"
      Grid.RowSpan="3"
      Background="#80000000"
      Visibility="Collapsed">

            <Border Width="360"
            Padding="20"
            Background="Black"
            CornerRadius="12"
            BorderBrush="#FFDF0B6A"
            BorderThickness="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

                <StackPanel HorizontalAlignment="Center">

                    <TextBlock x:Name="TxtWinnerTitle"
                       Text="Gewonnen!"
                       FontFamily="Agency FB"
                       FontWeight="Bold"
                       FontSize="32"
                       Foreground="DeepPink"
                       TextAlignment="Center"
                       Margin="0,0,0,10"/>

                    <TextBlock x:Name="TxtWinnerMessage"
                       Text="Spieler 1 hat gewonnen."
                       FontFamily="Agency FB"
                       FontSize="18"
                       Foreground="White"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,0,0,20"/>

                    <Button Content="Neues Spiel"
                    Width="140" Height="36"
                    Click="BtnNewGame_Click"
                    Background="DeepPink"
                    BorderBrush="DeepPink"
                    FontFamily="Agency FB"
                    FontWeight="Bold"/>
                </StackPanel>

            </Border>
        </Grid>

    </Grid>
</Window>
